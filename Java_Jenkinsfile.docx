pipeline {
    agent any

    tools {
        // Define the JDK and Maven installations in Jenkins.
        jdk 'JDK_11'  // JDK_11 is the name given in Global Tool Configuration
        maven 'Maven_3'  // Maven_3 is the name given in Global Tool Configuration
    }

    environment {
        // Optional: Define any environment variables needed
        APP_NAME = 'my-java-app'
        DEPLOY_DIR = '/opt/tomcat/webapps'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the project code from your repository
                git 'https://github.com/your-username/your-java-repo.git'
            }
        }

        stage('Build') {
            steps {
                // Run Maven build to compile the Java application
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Run tests with Maven
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy the WAR file to a remote server (Tomcat example)
                sh """
                scp target/$APP_NAME.war user@your-server:/opt/tomcat/webapps/
                """
            }
        }
    }

    post {
        success {
            // Action to take after successful build
            echo "Build and deployment successful!"
        }
        failure {
            // Action to take after failure
            echo "Build failed!"
        }
    }
}
